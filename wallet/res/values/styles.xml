<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/white</item>
        <item name="tabBackground">@color/bg_nav</item>
        <item name="tabTextAppearance">@style/AppTabTextAppearance</item>
        <item name="tabSelectedTextColor">@color/white</item>
    </style>

    <!-- for text -->
    <style name="AppTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">@color/white</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="PINStyle" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorControlNormal">@color/vivid_red</item>
        <item name="colorControlActivated">@color/vivid_red</item>
        <item name="colorControlHighlight">@color/vivid_red</item>
    </style>

    <style name="WhiteTextStyle" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
    </style>

    <style name="My.Theme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/bg_nav</item>
        <item name="colorPrimaryDark">@color/bg_nav</item>
        <item name="titleTextColor">@color/vivid_red</item>
        <item name="colorAccent">@color/vivid_red</item>
        <item name="colorButtonNormal">@color/vivid_red</item>
        <item name="colorControlNormal">@color/vivid_red</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>

        <item name="toolbarStyle">@style/ActionBarText</item>
        <item name="android:titleTextStyle">@style/ActionBarText</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_menu_back_arrow</item>
        <item name="android:textViewStyle">@style/My.Widget.TextView</item>
        <item name="android:editTextStyle">@style/My.Widget.EditText</item>
        <item name="android:autoCompleteTextViewStyle">@style/My.Widget.AutoCompleteTextView</item>
        <item name="android:checkboxStyle">@style/My.Widget.CompoundButton.CheckBox</item>
        <item name="android:spinnerStyle">@style/My.Widget.Spinner</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeBackground">@color/bg_nav</item>
        <item name="actionModeCloseDrawable">@drawable/ic_menu_back_arrow</item>
        <item name="actionModeStyle">@style/ActionBarText</item>
    </style>

    <style name="PrefsTheme" parent="@android:style/Theme.Black.NoTitleBar">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/bg_nav</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_menu_back_arrow</item>
    </style>

    <style name="ActionBarText" parent="@style/Widget.AppCompat.Toolbar">
        <item name="titleTextColor">@color/vivid_red</item>
        <item name="android:textColor">@color/vivid_red</item>
        <item name="background">@color/bg_nav</item>
    </style>

    <style name="My.Theme.NoStatusBar" parent="My.Theme.NoActionBar">

    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:background">@drawable/splash</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="NavigationView">
        <item name="android:listDivider">@drawable/nav_divider_style</item>
        <item name="android:scrollbarThumbVertical">@color/transparent</item>
        <item name="android:textColorSecondary">@color/vivid_red</item>
    </style>

    <style name="My.Theme.Transparent" parent="android:Theme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="NewDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>

        <item name="android:windowBackground">@color/bg_nav</item>
        <item name="android:background">@color/bg_nav</item>
        <item name="android:colorBackground">@color/bg_nav</item>
    </style>

